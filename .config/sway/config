    mode  1920x1080@60.0Hz
    pos 0 0
    #pos 0 0
    transform 270
    scale 1.0
    scale_filter nearest
    adaptive_sync off
    dpms on
    bg $HOME/Pictures/Wallpaper/background.png fill
